{
  "expo": {
    "name": "MealMind",
    "slug": "mealmind",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "mealmind",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "extra": {
      "eas": {
        "projectId": "mealmind"
      }
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mealmind.app",
      "infoPlist": {
        "NSCameraUsageDescription": "MealMind needs camera access to scan your refrigerator and recognize products",
        "NSPhotoLibraryUsageDescription": "MealMind needs photo library access to select images for product scanning"
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#FF6B35",
        "foregroundImage": "./assets/images/icon.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.mealmind.app",
      "permissions": [
        "android.permission.CAMERA"
      ]
    },
    "web": {
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#FF6B35",
          "dark": {
            "backgroundColor": "#1F2123"
          }
        }
      ],
      "expo-web-browser",
      [
        "expo-camera",
        {
          "cameraPermission": "MealMind needs camera access to scan your refrigerator and recognize products"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "MealMind needs photo library access to select images for product scanning"
        }
      ]
    ],
    "experiments": {
      "reactCompiler": true
    }
  }
}
